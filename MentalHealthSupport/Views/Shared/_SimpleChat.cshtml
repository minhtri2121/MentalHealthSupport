@model int?

<div id="chatContainer">
    @if (Model.HasValue)
    {
        <input type="hidden" name="userId" value="@Model.Value" />
        <div id="statusBadge" class="badge bg-danger status-badge">
            <span class="status-dot offline me-1"></span>Offline
        </div>
        <div id="chatBox" class="chat-box">
            <div id="emptyState" class="text-center text-muted mt-3">Chưa có tin nhắn nào.</div>
        </div>
        <div class="input-group mt-3">
            <input type="text" id="messageInput" class="form-control" placeholder="Nhập tin nhắn..." disabled>
            <button id="sendButton" class="btn btn-primary" disabled>Send</button>
        </div>
        <div class="mt-2">
            <button id="startChat" class="btn btn-success w-100">Bắt đầu</button>
            <button id="endChat" class="btn btn-danger w-100" disabled>Kết thúc</button>
        </div>
    }
    else
    {
        <p class="text-center text-danger">Bạn cần đăng nhập để sử dụng chat.</p>
    }
</div>